@model Calendario.ViewModels.PeriodoViewModel

@{
  ViewData["Title"] = "Edición";
}

<h1>Edición</h1>

<h4>Periodo</h4>
<hr />
<div id="calendar" class="row">
  <div class="col-12">
    <div class="row">
      <div class="col-6">
        <form asp-action="Edit">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="row">
            <div class="form-group col-12">
              <label asp-for="Inicio" class="control-label"></label>
              <v-date-picker :mode="mode" v-model="start" :locale="locale"></v-date-picker>
              <input asp-for="Inicio" type="hidden" />
              <span asp-validation-for="Inicio" class="text-danger"></span>
            </div>
            <div class="form-group col-12">
              <label asp-for="Fin" class="control-label"></label>
              <v-date-picker :mode="mode" v-model="end" :locale="locale"></v-date-picker>
              <input asp-for="Fin" type="hidden" />
              <span asp-validation-for="Fin" class="text-danger"></span>
            </div>
          </div>
          <div class="form-group">
            <input type="submit" value="Finalizar edición" class="btn btn-primary" />
          </div>
        </form>
      </div>
      <div class="col-6">
        <v-calendar class="mx-auto" :attributes="attrs" :locale="locale">
          <p>Cargando calendario... <i class="fas fa-spinner fa-spin"></i></p>
        </v-calendar>
      </div>
    </div>
  </div>
</div>

<div>
  <a asp-action="Index">Volver</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
  <script src='https://unpkg.com/v-calendar'></script>
  <script src="~/js/calendar.js"></script>
}
