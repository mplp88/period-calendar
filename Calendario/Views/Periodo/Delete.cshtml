@model Calendario.ViewModels.PeriodoViewModel

@{
  ViewData["Title"] = "Eliminar";
}

<h1 class="text-danger">Eliminar</h1>

<h3 class="text-danger">¿Estás seguro/a que querés eliminar este registro?</h3>
<div>
  <h4>Periodo</h4>
  <hr />
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Inicio)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Inicio)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Fin)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Fin)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.ProximaFechaPosible)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.ProximaFechaPosible)
    </dd>
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.Duracion)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.Duracion)
    </dd>
  </dl>

  <form asp-action="Delete">
    <input type="submit" value="Eliminar" class="btn btn-danger" /> |
    <a asp-action="Index">Volver</a>
  </form>
</div>
